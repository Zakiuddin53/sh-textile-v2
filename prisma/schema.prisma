generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id            Int   @id @default(autoincrement())
  name          String
  orderNumber   String
  phone         String
  address       String
  sherwani      Json?    
  kurta         Json?    
  coat          Json?   
  sadri         Json?    
  shirt         Json?   

  trouser          Json?    
  pant             Json? 
  paejama          Json? 
  choodidarPaejama Json? 
  shalwar          Json? 
  note             Json? 


  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([name, phone]) 
}
